{
  "name": "Sessions",
  "version": "1.0",
  "description": "Keep hold of all your sessions",
  "permissions": ["tabs", "declarativeContent", "storage"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/squirrel128.png"
    }
  },
  "icons": {
    "128": "images/squirrel128.png"
  },
  "manifest_version": 2
}
